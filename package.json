{
  "name": "@assign-management/server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "config": {
    "knexfile": "src/database/knexfile.ts",
    "prettier": ".prettierrc.json --write src/**/*.ts --ignore-path .gitignore"
  },
  "scripts": {
    "prestart": "tsc",
    "start": "node .",
    "dev": "tsc -w & nodemon ./src/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --config $npm_package_config_prettier",
    "test": "jest",
    "knex-cli": "knex --knexfile $npm_package_config_knexfile",
    "db:init": "ts-node ./src/database/cli/create.ts",
    "db:drop": "ts-node ./src/database/cli/drop.ts",
    "migrate:make": "npm run knex-cli migrate:make",
    "migrate:latest": "npm run knex-cli migrate:latest",
    "migrate:rollback": "npm run knex-cli migrate:rollback",
    "seed:make": "npm run knex-cli seed:make",
    "seed:run": "npm run knex-cli seed:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/assign-management/server.git"
  },
  "keywords": [
    "tasks",
    "manager"
  ],
  "author": "Sergey Khodyachikh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/assign-management/server/issues"
  },
  "homepage": "https://github.com/assign-management/server#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/pg-format": "^1.0.2",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "dotenv": "^12.0.3",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "graphql": "^16.2.0",
    "knex": "^0.95.15",
    "lodash": "^4.17.21",
    "pg": "^8.7.1",
    "pg-format": "^1.0.4",
    "ts-node": "^10.4.0",
    "winston": "^3.4.0"
  }
}
